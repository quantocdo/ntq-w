// defaults
body
	font-family font-stack('Trebuchet MS')
	font-size 16px

a
	color inherit
	text-decoration none

// style
.text-bold
	font-weight bold

.text-italic
	font-style italic

.text-upper
	text-transform uppercase

.text-underline
	text-decoration underline

// colors
.text-white
	color $color_white

.text-black
	color $color_black

.text-green
	color $color_green

.text-blue
	color $color_blue

.text-yellow
	color $color_yellow

.text-gray
	color $color_gray

.text-gray-light
	color $color_gray_light

.text-gray-dark
	color $color_gray_dark

// alignments
.text-center
	text-align center

.text-left
	text-align left

.text-right
	text-align right

.text-justify
	text-align justify
