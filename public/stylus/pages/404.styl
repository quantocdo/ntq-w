@import '../main'

body
	background $color_white

.warning
	position fixed
	top 50%
	left 50%

	transform translate(-50%, -50%)

	.picture
		text-align center

	.message
		margin-top 50px
		white-space nowrap
		font-size 40px

	.button
		margin-top 180px

		a
			display block
			margin 0 auto
			background $color_blue
			border-radius 5px
			line-height 44px
			width 200px
			text-align center
